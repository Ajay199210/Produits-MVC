@model Produits.MVC.Models.Produit

@{
    ViewData["Title"] = "Delete";
}

@if(!Model.EstVedette)
{
    <h3>Voulez-vous vraiment supprimer le produit ci-dessous ?</h3>
}
else
{
    <h3 class="btn-danger vedette-warning">Le produit vedette ne peut être supprimé</h3>
}

<hr />

<div>
    <section class="jumbotron text-center">
        <div class="container">
            <div class="row">
                <div class="col-md-5">
                    <img class="card-img-top" src="/images/@Model.Image" data-src="holder.js/100px225?theme=thumb&bg=55595c&fg=eceeef&text=Thumbnail" alt="Card image cap">
                </div>
                <div class="col-md-7">
                    <h1 class="jumbotron-heading">@Model.Nom</h1>
                    <p class="lead text-muted">@Model.Description</p>
                </div>
            </div>

        </div>
    </section>

    <br />

    <form asp-action="Delete">
        @if(@Model.EstVedette)
        {
                <input type="submit" value="Delete" class="btn btn-danger" disabled />
        }
        else 
        {
            <input type="submit" value="Delete" class="btn btn-danger" />
        }
        | <a class="btn btn-outline-secondary" asp-action="Index">Liste des produits</a>
    </form>
</div>
